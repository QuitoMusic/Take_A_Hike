<article>
  <h2>
    Edit Post
  </h2>
  <form class="editPostform">
    <div>
      <input id="postTitle" name="postTitle" type="text" value="{{post.title}}" />
    </div>
    <div>
      <textarea id="postText" name="postText">{{post.post_text}}</textarea>
    </div>
    <div>
      Posted by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button class="saveDeletebtns" type="submit">Save</button>
    <button type="button" class="deletePostbtn">Delete</button>
  </form>
</article>

<form class="commentForm">
  <div>
    <textarea id="commentBody" name="commentBody"></textarea>
  </div>

  <div>
    <button type="submit">Add comment</button>
  </div>
</form>

{{> comments post.comments}}