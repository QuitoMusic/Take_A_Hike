<section class="row">
  <div class = "column">
    <div id="dashboardIntro">
    <h1>Welcome to your Hiking Dashboard!</h1>
    <h2>Create New Post:</h2>
    </div>

    <form class="newPostform">
            {{#if loggedIn}}
      <div>
        <h2 class="postInput">Select Address:</h2>
        <select id="addressDropdown">
          {{#each addresses}}
          <option value="{{ this.id }}">{{ this.name }}</option>
          {{/each}}
        </select>
      </div>
      {{/if}}
      <div>
        <label class="postInput" for="postTitle">Title:</label>
        <input type="text" id="postTitle" name="postTitle" />
      </div>
      <div>
        <label class="postInput" for="postText">Text:</label>
        <textarea id="postText" name="postText"></textarea>
      </div>
      <button type="submit" class="btn">Create New Post</button>
    </form>
  </div>
  <div class = "aboutMe">
    <h2>About Me</h2>
    {{> userInformation}}
  </div>

</section>
{{#if posts.length}}
<section>
  <h2 id="userPostsection">Your Thoughts:</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> postInformation post}}
      <a id="editPostlink" href="/dashboard/edit/{{post.id}}">Edit Post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/js/getAddresses.js"></script>
<script src="/js/addPost.js"></script>